@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    var returnUrl = "/";
}

<div class="row">
    <div class="login-container">
        <section>
            <form id="account" method="post">
                <h2 style="text-align:center">Login</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <hr/>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="color:#C6DCE4">Log in</button>
                </div>
                <hr style="width:10vw; margin-left: auto; margin-right: auto"/>
                <div>
                    <a class="w-100 btn btn-lg btn-primary" asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@returnUrl">Register</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
